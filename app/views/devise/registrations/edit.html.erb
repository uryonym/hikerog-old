<section class="section">
  <div class="uk-container uk-container-center">
    <div class="uk-grid">
      <div class="uk-width-1-3 uk-container-center">
        <div class="uk-panel uk-panel-box">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :class => "uk-form uk-form-horizontal", method: :put }) do |f| %>
            <%= devise_error_messages! %>

              <h2 class="uk-panel-title">プロフィールの編集</h2>

              <div class="uk-form-row">
                <%= f.email_field :email, class: 'uk-form-width-large', placeholder: 'メールアドレス', autofocus: true %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="uk-form-row">
                <!--<i>パスワードを変更しない場合は空白</i>-->
                <%= f.password_field :password, class: 'uk-form-width-large', placeholder: '新しいパスワード', autocomplete: "off" %>
                <% if @minimum_password_length %>
                  <em><%= @minimum_password_length %> 文字以上</em>
                <% end %>
              </div>

              <div class="uk-form-row">
                <%= f.password_field :password_confirmation, class: 'uk-form-width-large', placeholder: '新しいパスワード確認', autocomplete: "off" %>
              </div>

              <div class="uk-form-row">
                <%= f.password_field :current_password, class: 'uk-form-width-large', placeholder: '現在のパスワード', autocomplete: "off" %>
              </div>

              <div class="uk-form-row">
                <%= f.button "更新", class: 'uk-button uk-button-primary uk-width-1-1' %>
              </div>
          <% end %>
        </div>
      </div>

      <div class="uk-width-1-3 uk-container-center">
        <div class="uk-panel uk-panel-box uk-panel-box-primary">
          <h3 class="uk-panel-title">アカウント削除</h3>
          <%= button_to "削除する", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, class: 'uk-button uk-button-danger uk-width-1-1', method: :delete %>
        </div>
      </div>

    </div>
  </div>
</section>

