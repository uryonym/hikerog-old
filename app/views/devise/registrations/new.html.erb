<section class="section">
  <div class="uk-container uk-container-center">
    <div class="uk-grid">
      <div class="uk-width-1-3 uk-container-center">
        <div class="uk-panel uk-panel-box">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :class => "uk-form uk-form-horizontal" }) do |f| %>
            <%= devise_error_messages! %>

              <h2 class="uk-panel-title">新規アカウントの作成</h2>

              <div class="uk-form-row">
                <%= f.email_field :email, class: 'uk-form-width-large', placeholder: 'メールアドレス', autofocus: true %>
              </div>

              <div class="uk-form-row">
                <%= f.password_field :password, class: 'uk-form-width-large', placeholder: 'パスワード', autocomplete: "off" %>
                <% if @minimum_password_length %>
                  <em><%= @minimum_password_length %> 文字以上</em>
                <% end %>
              </div>

              <div class="uk-form-row">
                <%= f.password_field :password_confirmation, class: 'uk-form-width-large', placeholder: 'パスワード確認', autocomplete: "off" %>
              </div>

              <div class="uk-form-row">
                <%= f.button "アカウント作成", class: 'uk-button uk-button-primary uk-width-1-1' %>
              </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>