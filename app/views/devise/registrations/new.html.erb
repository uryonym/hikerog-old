<section class="section">
  <div class="uk-container uk-container-center">
    <div class="uk-grid">
      <div class="uk-width-3-5 uk-container-center">
        <div class="uk-panel uk-panel-box">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :class => "uk-form uk-form-horizontal" }) do |f| %>
            <%= devise_error_messages! %>

              <div class="uk-form-row">
                <%= f.label :email, "メールアドレス", class: 'uk-form-label' %>
                <div class="uk-form-controls">
                  <%= f.email_field :email, class: 'uk-form-width-large', autofocus: true %>
                </div>
              </div>

              <div class="uk-form-row">
                <%= f.label :password, "パスワード", class: 'uk-form-label' %>
                <div class="uk-form-controls">
                  <%= f.password_field :password, class: 'uk-form-width-large', autocomplete: "off" %>
                  <% if @minimum_password_length %>
                    <em><%= @minimum_password_length %> 文字以上</em>
                  <% end %>
                </div>
              </div>

              <div class="uk-form-row">
                <%= f.label :password_confirmation, "パスワード確認", class: 'uk-form-label' %>
                <div class="uk-form-controls">
                  <%= f.password_field :password_confirmation, class: 'uk-form-width-large', autocomplete: "off" %>
                </div>
              </div>

              <div class="uk-form-row">
                <div class="uk-form-controls">
                  <%= f.button "登録", class: 'uk-button uk-button-primary' %>
                </div>
              </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>