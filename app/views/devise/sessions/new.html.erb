<section class="section">
  <div class="uk-container uk-container-center">
    <div class="uk-grid">
      <div class="uk-width-1-3 uk-container-center">
        <div class="uk-panel uk-panel-box">
    
          <%= render 'alert' %>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { :class => "uk-form uk-form-horizontal" }) do |f| %>

              <h2 class="uk-panel-title">ログイン</h2>

              <div class="uk-form-row">
                <%= f.email_field :email, class: 'uk-form-width-large', placeholder: 'メールアドレス', autofocus: true %>
              </div>

              <div class="uk-form-row">
                <%= f.password_field :password, class: 'uk-form-width-large', placeholder: 'パスワード', autocomplete: "off" %>
              </div>

              <div class="uk-form-row">
                <%= f.button "ログイン", class: 'uk-button uk-button-primary uk-width-1-1' %>
              </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>