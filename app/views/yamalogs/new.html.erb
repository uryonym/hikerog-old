<div class="container hikerog">

  <% provide :title, "ヤマログ投稿" %>

  <h2>ヤマログを作成</h2>
  <p>登った山の情報を登録して、みんなに共有しよう。</p>

  <%= form_for @yamalog, html: {multipart: true, class: 'form-horizontal', wrapper: :horizontal_form} do |f| %>

      <div class="form-group">
        <%= f.label :yama_date, '登山日時', class: 'control-label col-sm-2' %>
        <div class="col-sm-4">
          <div class="input-group date datepicker">
            <%= f.text_field :yama_date, class: 'form-control' %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :yama_name, '山名', class: 'control-label col-sm-2' %>
        <div class="col-sm-4">
          <%= f.text_field :yama_name, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :weather, '天気', class: 'control-label col-sm-2' %>
        <div class="col-sm-4">
          <%= f.text_field :weather, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :member, 'メンバー', class: 'control-label col-sm-2' %>
        <div class="col-sm-6">
          <%= f.text_field :member, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :route, 'ルート', class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.text_area :route, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
          <%= f.label :yamalog_pic, '写真', class: 'control-label col-sm-2' %>
          <div class="col-sm-6">
            <%= f.file_field :yamalog_pic, class: 'form-control' %>
          </div>
      </div>

      <div class="form-group">
        <%= f.label :gpslog, 'GPSログ', class: 'control-label col-sm-2' %>
        <div class="col-sm-6">
          <%= f.file_field :gpslog, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
          <%= f.submit "投稿", class: 'btn btn-default' %>
        </div>
      </div>
  <% end %>

</div>
